---
import { FOOTER_NAV, SOCIAL_LINKS, SITE_INFO } from "../../utils/constants";

// Social media links with icons
const socialLinksWithIcons = [
  {
    name: "Facebook Groups",
    href: "/resources#community",
    external: false,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>`
  },
  {
    name: "Instagram",
    href: SOCIAL_LINKS.instagram,
    external: true,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>`
  },
];

// Current year for copyright
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white pt-16 pb-8">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- ECEA Info -->
      <div>
        <div class="mb-4">
          <a href="/" class="text-2xl font-bold text-white font-heading inline-flex items-center">
            <span class="sr-only">ECEA</span>
            <!-- Motorcycle/Racing Icon -->
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" class="h-10 w-auto text-white mr-2">
              <path fill="currentColor" d="M280 32c-13.3 0-24 10.7-24 24s10.7 24 24 24l57.7 0 16.4 30.3L256 192l-45.3-45.3c-12-12-28.3-18.7-45.3-18.7L64 128c-17.7 0-32 14.3-32 32l0 32 96 0c88.4 0 160 71.6 160 160c0 11-1.1 21.7-3.2 32l70.4 0c-2.1-10.3-3.2-21-3.2-32c0-52.2 25-98.6 63.7-127.8l-15.7-28.9c-3.5-6.5-2-14.5 3.6-19.3l66-57.1c5.4-4.6 13.4-4.6 18.6 .2l12.5 12c6.7 6.5 7.6 16.9 2.1 24.5L473.4 192l79.2 0c54.7 0 99.3 44.2 99.8 98.9c0 0 0 0 0 .1l0 .2 0 .8c0 .5 0 .9 0 1.4l0 .6c0 88.4-71.6 160-160 160l-69.7 0c-19.5 35.7-57.3 60-100.3 60c-43 0-80.8-24.3-100.3-60L128 384c-88.4 0-160-71.6-160-160l0-64c0-53 43-96 96-96l101.5 0 109.6-91.3C285.3 63.6 297.9 59 311 59l.4 0 27.9 0c2.7 0 5.3 .4 7.8 1.2L280 32zM128 256a96 96 0 1 0 0 192 96 96 0 1 0 0-192zm384 96a96 96 0 1 0 192 0 96 96 0 1 0 -192 0z"/>
            </svg>
            <span>ECEA</span>
          </a>
        </div>

        <div class="mb-4 text-gray-300">
          <p class="font-semibold text-white">{SITE_INFO.name}</p>
          <p class="text-sm mt-2">{SITE_INFO.tagline}. AMA sanctioned events across the East Coast.</p>
        </div>

        <address class="not-italic mb-4 text-gray-300 text-sm">
          <p>
            <a href={`mailto:${SITE_INFO.email}`} class="hover:text-primary-300">
              {SITE_INFO.email}
            </a>
          </p>
        </address>

        <!-- Social Links -->
        <div class="flex space-x-4 mt-6">
          {
            socialLinksWithIcons.map((link) => (
              <a
                href={link.href}
                target={link.external ? "_blank" : undefined}
                rel={link.external ? "noopener noreferrer" : undefined}
                class="text-gray-400 hover:text-white transition-colors"
                aria-label={link.name}
              >
                <Fragment set:html={link.icon} />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Navigation Links -->
      {
        FOOTER_NAV.map((group) => (
          <div>
            <h4 class="text-lg font-bold mb-4 text-white">{group.title}</h4>
            <ul class="space-y-2">
              {group.items.map((item) => (
                <li>
                  <a
                    href={item.href}
                    class="text-gray-300 hover:text-primary-300 transition-colors"
                    target={item.href.startsWith('http') ? '_blank' : undefined}
                    rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                  >
                    {item.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <!-- Copyright -->
    <div class="pt-8 mt-8 border-t border-gray-800 text-center text-gray-400 text-sm">
      <p>&copy; {currentYear} {SITE_INFO.name}. All rights reserved.</p>
      <p class="mt-2">
        AMA Sanctioned | Promoting off-road motorcycle racing since {SITE_INFO.foundedYear}
      </p>
    </div>
  </div>
</footer>
