---
import { NAV_ITEMS, SOCIAL_LINKS, MOTO_TALLY } from "../../utils/constants";

// Get the current URL path to highlight the active link
const currentPath = Astro.url.pathname;

// Current year for results dropdown
const currentYear = new Date().getFullYear();

// Results dropdown items
const resultsDropdown = [
  { text: "Enduro Results", href: `${MOTO_TALLY.baseUrl}/${MOTO_TALLY.paths["Enduro"]}/${MOTO_TALLY.pages.results}?EY=${currentYear}`, external: true },
  { text: "Hare Scramble Results", href: `${MOTO_TALLY.baseUrl}/${MOTO_TALLY.paths["Hare Scramble"]}/${MOTO_TALLY.pages.results}?EY=${currentYear}`, external: true },
  { text: "FastKIDZ Results", href: `${MOTO_TALLY.baseUrl}/${MOTO_TALLY.paths["FastKIDZ"]}/${MOTO_TALLY.pages.results}?EY=${currentYear}`, external: true },
  { text: "Enduro Team Results", href: "/results/team", external: false },
  { text: "All Results by Year", href: "/results", external: false },
];

// Championship standings links
const standingsDropdown = [
  { text: "Enduro Standings", href: `${MOTO_TALLY.baseUrl}/${MOTO_TALLY.paths["Enduro"]}/${MOTO_TALLY.pages.standings}`, external: true },
  { text: "Hare Scramble Standings", href: `${MOTO_TALLY.baseUrl}/${MOTO_TALLY.paths["Hare Scramble"]}/${MOTO_TALLY.pages.standings}`, external: true },
  { text: "FastKIDZ Standings", href: `${MOTO_TALLY.baseUrl}/${MOTO_TALLY.paths["FastKIDZ"]}/${MOTO_TALLY.pages.standings}`, external: true },
];

// Series registration links
const registrationDropdown = [
  { text: "Enduro Registration", href: `${MOTO_TALLY.baseUrl}/${MOTO_TALLY.paths["Enduro"]}/${MOTO_TALLY.pages.registration}`, external: true },
  { text: "Hare Scramble Registration", href: `${MOTO_TALLY.baseUrl}/${MOTO_TALLY.paths["Hare Scramble"]}/${MOTO_TALLY.pages.registration}`, external: true },
  { text: "FastKIDZ Registration", href: `${MOTO_TALLY.baseUrl}/${MOTO_TALLY.paths["FastKIDZ"]}/${MOTO_TALLY.pages.registration}`, external: true },
];
---

<!-- Desktop Navigation -->
<nav class="hidden lg:block">
  <ul class="flex items-center space-x-6">
    {
      NAV_ITEMS.map((item) => {
        const isActive = currentPath === item.href ||
                         (item.href !== "/" && currentPath.startsWith(item.href));
        const isResults = item.text === "Results";

        if (isResults) {
          // Results dropdown
          return (
            <li class="relative group">
              <a
                href={item.href}
                class={`text-base font-medium transition-colors hover:text-primary-600 inline-flex items-center ${
                  isActive ? "text-primary-600" : "text-gray-700"
                }`}
                aria-current={isActive ? "page" : undefined}
              >
                {item.text}
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </a>
              <!-- Dropdown -->
              <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                <div class="bg-white rounded-lg shadow-lg border border-gray-200 py-2 min-w-[220px]">
                  <div class="px-3 py-1 text-xs font-semibold text-gray-500 uppercase tracking-wider">{currentYear} Results</div>
                  {resultsDropdown.map((dropItem) => (
                    <a
                      href={dropItem.href}
                      target={dropItem.external ? "_blank" : undefined}
                      rel={dropItem.external ? "noopener noreferrer" : undefined}
                      class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 transition-colors"
                    >
                      {dropItem.text}
                      {dropItem.external && (
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline ml-1 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                      )}
                    </a>
                  ))}
                  <div class="border-t border-gray-100 my-2"></div>
                  <div class="px-3 py-1 text-xs font-semibold text-gray-500 uppercase tracking-wider">Championship Standings</div>
                  {standingsDropdown.map((dropItem) => (
                    <a
                      href={dropItem.href}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 transition-colors"
                    >
                      {dropItem.text}
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline ml-1 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                    </a>
                  ))}
                  <div class="border-t border-gray-100 my-2"></div>
                  <div class="px-3 py-1 text-xs font-semibold text-gray-500 uppercase tracking-wider">Series Registration</div>
                  {registrationDropdown.map((dropItem) => (
                    <a
                      href={dropItem.href}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 transition-colors"
                    >
                      {dropItem.text}
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline ml-1 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                    </a>
                  ))}
                </div>
              </div>
            </li>
          );
        }

        // Highlight "Get Started" with special styling
        const isGetStarted = item.text === "Get Started";

        if (isGetStarted) {
          return (
            <li>
              <a
                href={item.href}
                class={`text-base font-medium transition-colors px-3 py-1.5 rounded-lg ${
                  isActive
                    ? "bg-primary-600 text-white"
                    : "bg-primary-100 text-primary-700 hover:bg-primary-600 hover:text-white"
                }`}
                aria-current={isActive ? "page" : undefined}
              >
                {item.text}
              </a>
            </li>
          );
        }

        return (
          <li>
            <a
              href={item.href}
              class={`text-base font-medium transition-colors hover:text-primary-600 ${
                isActive ? "text-primary-600" : "text-gray-700"
              }`}
              aria-current={isActive ? "page" : undefined}
            >
              {item.text}
            </a>
          </li>
        );
      })
    }

    <!-- Facebook Icon - Links to community section on Resources -->
    <li>
      <a
        href="/resources#community"
        class="text-gray-700 hover:text-primary-600 transition-colors p-2"
        aria-label="ECEA Facebook Groups"
        title="View Facebook Groups"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
        </svg>
      </a>
    </li>
  </ul>
</nav>

<!-- Mobile Menu Button -->
<button
  id="mobile-menu-button"
  class="lg:hidden p-2 text-gray-700 hover:text-primary-600 focus:outline-none transition-colors relative"
  aria-label="Toggle Menu"
  aria-expanded="false"
>
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
  </svg>
</button>

<!-- Mobile Menu Dropdown - Compact & Clean -->
<div
  id="mobile-menu"
  class="absolute top-full left-0 right-0 bg-white shadow-lg border-t border-gray-100 transform scale-y-0 origin-top transition-transform duration-200 ease-out lg:hidden z-50"
  role="menu"
  aria-labelledby="mobile-menu-button"
>
  <!-- Navigation Links in Grid -->
  <div class="px-4 py-6">
    <div class="grid grid-cols-2 gap-3">
      {
        NAV_ITEMS.map((item) => {
          const isActive = currentPath === item.href ||
                           (item.href !== "/" && currentPath.startsWith(item.href));
          const isGetStarted = item.text === "Get Started";

          return (
            <a
              href={item.href}
              class={`block px-4 py-3 text-sm font-medium rounded-lg transition-colors text-center ${
                isGetStarted
                  ? isActive
                    ? "bg-primary-600 text-white border border-primary-600"
                    : "bg-primary-100 text-primary-700 border border-primary-200 hover:bg-primary-600 hover:text-white hover:border-primary-600"
                  : isActive
                    ? "bg-primary-50 text-primary-600 border border-primary-200"
                    : "text-gray-700 hover:bg-gray-50 hover:text-primary-600 border border-transparent"
              }`}
              role="menuitem"
              aria-current={isActive ? "page" : undefined}
            >
              {item.text}
            </a>
          );
        })
      }
    </div>

    <!-- Facebook Link -->
    <div class="mt-4 pt-4 border-t border-gray-100">
      <a
        href="/resources#community"
        class="flex items-center justify-center px-4 py-3 text-sm font-medium text-gray-600 hover:text-primary-600 transition-colors rounded-lg hover:bg-gray-50"
        role="menuitem"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
        </svg>
        ECEA Facebook Groups
      </a>
    </div>
  </div>
</div>

<style>
  /* Mobile menu button animation */
  #mobile-menu-button:hover svg {
    transform: scale(1.1);
  }

  #mobile-menu-button svg {
    transition: transform 0.2s ease;
  }

  /* Mobile menu show/hide states */
  #mobile-menu.show {
    transform: scaleY(1);
  }

  /* Smooth hover effects */
  #mobile-menu a {
    transition: all 0.15s ease;
  }

  /* Active state styling */
  #mobile-menu a[aria-current="page"] {
    font-weight: 600;
  }
</style>

<script>
  // Mobile menu functionality
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    let isMenuOpen = false;

    // Function to toggle mobile menu
    const toggleMobileMenu = () => {
      isMenuOpen = !isMenuOpen;

      if (isMenuOpen) {
        // Show menu
        mobileMenu.classList.add('show');
        mobileMenuButton.setAttribute('aria-expanded', 'true');
      } else {
        // Hide menu
        mobileMenu.classList.remove('show');
        mobileMenuButton.setAttribute('aria-expanded', 'false');
      }
    };

    // Event listeners
    mobileMenuButton?.addEventListener('click', (e) => {
      e.stopPropagation();
      toggleMobileMenu();
    });

    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      if (isMenuOpen && !mobileMenu.contains(e.target) && !mobileMenuButton.contains(e.target)) {
        toggleMobileMenu();
      }
    });

    // Close menu when clicking a navigation link
    const navLinks = mobileMenu?.querySelectorAll('a[href^="/"]');
    navLinks?.forEach(link => {
      link.addEventListener('click', () => {
        if (isMenuOpen) {
          setTimeout(() => toggleMobileMenu(), 100);
        }
      });
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isMenuOpen) {
        toggleMobileMenu();
      }
    });

    // Handle window resize
    window.addEventListener('resize', () => {
      if (window.innerWidth >= 1024 && isMenuOpen) {
        toggleMobileMenu();
      }
    });
  });
</script>
