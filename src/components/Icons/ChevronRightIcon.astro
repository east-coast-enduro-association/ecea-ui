---
/**
 * Chevron Right Icon Component
 * Used for navigation arrows and "learn more" links
 */
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { class: className = '', size = 'sm' } = Astro.props;

const sizeClasses = {
  sm: 'h-4 w-4',
  md: 'h-5 w-5',
  lg: 'h-6 w-6',
};
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  class:list={[sizeClasses[size], className]}
  fill="none"
  viewBox="0 0 24 24"
  stroke="currentColor"
>
  <path
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    d="M9 5l7 7-7 7"
  />
</svg>
