---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/Sections/PageHeader.astro";
import Button from "../components/UI/Button.astro";
import { getCollection } from "astro:content";
import { FACEBOOK_GROUPS, STAFF_CONTACTS } from "../utils/constants";

// Get board members (officers) for the Board of Directors card
const officers = (await getCollection("board"))
  .filter((member) => !member.data.draft)
  .sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

// Helper to encode email for click-to-reveal
function encodeEmail(email: string): string {
  return btoa(email);
}
---

<BaseLayout
  title="Contact Us - ECEA"
  description="Get in touch with the East Coast Enduro Association. Contact us for questions about events, membership, or general inquiries."
>
  <PageHeader
    title="Contact Us"
    subtitle="Get in touch with ECEA"
    backgroundImage="/images/feature-bg.jpg"
  />

  <!-- Contact Form and General Info -->
  <section class="py-16">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-bold mb-6">Send Us a Message</h2>

          <form id="contact-form" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              >
                <option value="">Please select</option>
                <option value="General Inquiry">General Inquiry</option>
                <option value="Event Question">Event Question</option>
                <option value="Registration Help">Registration Help</option>
                <option value="Club Information">Club Information</option>
                <option value="Sponsorship">Sponsorship</option>
                <option value="Other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              ></textarea>
            </div>

            <div>
              <Button type="submit" variant="primary">
                Send Message
              </Button>
            </div>
          </form>
        </div>

        <!-- General Contact Info -->
        <div>
          <h2 class="text-3xl font-bold mb-6">Get In Touch</h2>

          <div class="space-y-4">
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold mb-2">Facebook Groups</h3>
                <p class="text-sm text-gray-500 mb-3">Join our community for updates and discussions</p>
                <div class="space-y-2">
                  {Object.entries(FACEBOOK_GROUPS).map(([key, group]) => (
                    <a
                      href={group.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block text-gray-700 hover:text-blue-600 transition-colors"
                    >
                      <span class="font-medium">{group.name}</span>
                      <span class="text-gray-500 text-sm ml-1">- {group.description}</span>
                    </a>
                  ))}
                </div>
              </div>
            </div>
          </div>

          <!-- Quick Links -->
          <div class="mt-12 bg-gray-50 p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4">Quick Links</h3>
            <ul class="space-y-3">
              <li>
                <a href="/board" class="text-primary-600 hover:text-primary-700">
                  → Meet the Board of Directors
                </a>
              </li>
              <li>
                <a href="/faq" class="text-primary-600 hover:text-primary-700">
                  → Frequently Asked Questions
                </a>
              </li>
              <li>
                <a href="/get-started" class="text-primary-600 hover:text-primary-700">
                  → Getting Started Guide
                </a>
              </li>
              <li>
                <a href="/clubs" class="text-primary-600 hover:text-primary-700">
                  → Find a Club Near You
                </a>
              </li>
              <li>
                <a href="/resources" class="text-primary-600 hover:text-primary-700">
                  → Rider Resources
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Series & Staff Contacts -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Series & Staff Contacts</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Contact the right person for your specific needs
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Board of Directors Card -->
        <div class="bg-white rounded-lg shadow-md p-6 border-2 border-primary-200">
          <h3 class="text-xl font-bold mb-4 text-primary-800 border-b border-primary-100 pb-2">
            Board of Directors
          </h3>
          <ul class="space-y-3">
            {officers.map((member) => (
              <li>
                <div class="font-medium">{member.data.name}</div>
                <div class="text-sm text-gray-600">{member.data.title}</div>
                {member.data.email && (
                  <button
                    class="reveal-email inline-flex items-center text-sm text-gray-500 hover:text-primary-600 transition-colors mt-1"
                    data-email={encodeEmail(member.data.email)}
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <span class="email-text">Click to reveal</span>
                  </button>
                )}
              </li>
            ))}
          </ul>
          <a href="/board" class="inline-flex items-center text-sm text-primary-600 hover:text-primary-700 font-medium mt-4">
            View full board details
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        {STAFF_CONTACTS.map((category) => (
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-bold mb-4 text-primary-800 border-b border-primary-100 pb-2">
              {category.category}
            </h3>
            <ul class="space-y-4">
              {category.contacts.map((contact) => (
                <li>
                  <div class="font-medium">{contact.name}</div>
                  {contact.role && (
                    <div class="text-sm text-gray-600">{contact.role}</div>
                  )}
                  {contact.email && (
                    <button
                      class="reveal-email inline-flex items-center text-sm text-gray-500 hover:text-primary-600 transition-colors mt-1"
                      data-email={encodeEmail(contact.email)}
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                      <span class="email-text">Click to reveal</span>
                    </button>
                  )}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Club Contacts -->
  <section class="py-16">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Contact a Club Directly</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          For event-specific questions, reach out to the hosting club
        </p>
      </div>

      <div class="text-center">
        <Button href="/clubs" variant="primary">
          View All Clubs
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Click-to-reveal email functionality
  document.querySelectorAll('.reveal-email').forEach(button => {
    button.addEventListener('click', function() {
      const encodedEmail = this.getAttribute('data-email');
      if (encodedEmail) {
        const email = atob(encodedEmail);
        const emailText = this.querySelector('.email-text');
        if (emailText) {
          // Create a mailto link
          const link = document.createElement('a');
          link.href = `mailto:${email}`;
          link.textContent = email;
          link.className = 'text-primary-600 hover:underline';

          // Replace the button with the link
          this.parentNode?.replaceChild(link, this);
        }
      }
    });
  });

  // Handle form submission
  document.getElementById('contact-form')?.addEventListener('submit', function(e) {
    e.preventDefault();
    alert('Thank you for your message! We will get back to you soon.');
    this.reset();
  });
</script>
